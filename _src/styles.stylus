nav.top-bar
  img.logo
    height: 100px
    width: auto

section
  padding: 4rem

  p
    line-height: 2rem

img.insta-logo
  height: 30px
  width: auto
  margin: 0.5rem

h1, h2, h3, h4, h5, h6
  font-weight: bold
  color: $grayDark
  line-height: 1.3em


@media $media.mdDown
  section
    padding: 2rem

  .experiences
    padding: 0

  .bio .copy
    padding: 0

.workshop
  padding-bottom: $spacing*3
  
  .workshop-description
    white-space: pre-wrap
    margin-bottom: $spacing*2

  a.checkout
    background-color: darken($brandGreen, 20%)
    color: white
    padding: $spacing

@media $media.smDown
  nav
    flex-direction: column
    position: normal
    top: auto

    a
      margin: ($spacing / 3)
      padding: 0
      font-size: 1.3rem

.swiper-container
  overflow: hidden
